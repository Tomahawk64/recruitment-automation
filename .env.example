# MongoDB Configuration
MONGO_URI=mongodb+srv://<user>:<pass>@cluster0.mongodb.net/recruitment
# Or use local MongoDB: mongodb://localhost:27017/recruitment

# Server Configuration
PORT=4000
NODE_ENV=development
JWT_SECRET=your_secret_key_here_change_in_production

# EmailJS Configuration
EMAILJS_SERVICE_ID=your_emailjs_service
EMAILJS_TEMPLATE_ID=your_emailjs_template
EMAILJS_USER_ID=your_emailjs_user
EMAILJS_API_KEY=your_emailjs_key

# Invoice Configuration
INVOICE_PREFIX=INV-2025-
COMPANY_NAME=Recruitment Solutions Pvt Ltd
COMPANY_ADDRESS=123 Business Park, Electronic City, Bangalore, Karnataka 560100
COMPANY_EMAIL=invoices@recruitmentsolutions.com
COMPANY_PHONE=+91-80-1234-5678
COMPANY_GSTIN=29ABCDE1234F1Z5
CURRENCY=INR
GST_RATE=0.18
LOCAL_STATE_CODE=29

# Cloudflare R2 Configuration (S3-compatible)
STORAGE_PROVIDER=r2
R2_BUCKET_NAME=recruitment-automation
R2_ACCOUNT_ID=<your_r2_account_id>
R2_ACCESS_KEY_ID=<your_r2_access_key>
R2_SECRET_ACCESS_KEY=<your_r2_secret>
R2_REGION=auto
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com

# Payment Terms
DEFAULT_PAYMENT_TERMS=Net 30
