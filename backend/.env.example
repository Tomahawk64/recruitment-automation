# Backend Environment Variables Template
# Copy this file to .env and fill in your values

# MongoDB Atlas Connection (REQUIRED)
MONGO_URI=your_mongodb_connection_string_here

# Server Configuration
PORT=4000
NODE_ENV=production

# JWT Secret (REQUIRED - Use a strong random string)
JWT_SECRET=your_secure_random_secret_key_here

# CORS Configuration (REQUIRED - Your frontend URL)
# For Render deployment: https://recruitment-automation-frontend.onrender.com
FRONTEND_URL=https://recruitment-automation-frontend.onrender.com
